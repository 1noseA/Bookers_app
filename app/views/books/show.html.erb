<header>Books</header>
<main class="clearfix">
  <%= @books.each do |book| %>
  	<p>Title</p>
  	<span><%= @book.title %></span>
  	<p>Body</p>
  	<span><%= @book.body %></span>
  <% end %>

  	<p class = "single-text">
  		<%= @book.body %></p>
    <%= link_to "Show",show_book_path(@book) %>
    <%= link_to "Edit",edit_book_path(@book) %>
    <%= link_to "Destroy",book_path(@book),method: :delete %>
</main>

<h1>New book</h1>

<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>