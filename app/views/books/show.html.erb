<header>Books</header>
<main class="clearfix">
  <div class = "book-box">
  	<h4>Title
  	<%= @book.title %></h4>
  	<h4>Body
  	<%= @book.body %></h4>

  	<p class = "single-text">
  		<%= @book.body %></p>
    <%= link_to "Show",show_book_path(@book) %>
    <%= link_to "Edit",edit_book_path(@book) %>
    <%= link_to "Destroy",book_path(@book),method: :delete %>
  </div>
</main>

<h1>New book</h1>

<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>