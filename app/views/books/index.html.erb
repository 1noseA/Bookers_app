<h1>Books</h1>
<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>

  <%= @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>

     <%= link_to "Show",book_path(book) %>
     <%= link_to "Edit",edit_book_path(book) %>
     <%= link_to "Destroy",book_path(book),method: :delete ,"date-confirm" => "Are you sure?" %>
    </tr>
  <% end %>

</table>

<h3>New book</h3>

<%= form_for(@book) do |f| %>
<%= render 'layouts/error_messages', book: f.object %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
